<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MachineLearningActivity">

    <ImageView
        android:id="@+id/imageViewforMachineLearning"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/babyshark1"
        tools:layout_editor_absoluteY="101dp" />

    <Button
        android:id="@+id/takepicforlearning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Picture"/>

    <Button
        android:id="@+id/makeprediction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Predict" />

    <TextView
        android:id="@+id/predictresult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:fontFamily="@font/baloo_bhaina"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="24sp" />
</androidx.appcompat.widget.LinearLayoutCompat>